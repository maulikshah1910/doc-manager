# Document Manager - Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# Database Configuration (MySQL)
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=doc_manager
DB_USER=doc_user
DB_PASSWORD=doc_password
DB_ROOT_PASSWORD=root_password

# ===========================================
# Backend API Configuration (NestJS)
# ===========================================
BACKEND_PORT=4000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ===========================================
# Frontend Configuration (Next.js)
# ===========================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# Mock Authentication (set to 'true' when backend is not ready)
NEXT_PUBLIC_USE_MOCK_AUTH=true

# ===========================================
# File Storage Configuration
# ===========================================
STORAGE_PATH=./storage
MAX_FILE_SIZE=10485760
# Maximum file size in bytes (10MB = 10485760)

ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png
# Comma-separated list of allowed file extensions

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:3000
# Comma-separated list of allowed origins

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=debug
# Options: error, warn, info, debug

# ===========================================
# Session Configuration
# ===========================================
SESSION_SECRET=your-session-secret-change-this-in-production

# ===========================================
# Email Configuration (Future Use)
# ===========================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@example.com

# ===========================================
# Application Configuration
# ===========================================
APP_NAME=Document Manager
APP_URL=http://localhost:3000
